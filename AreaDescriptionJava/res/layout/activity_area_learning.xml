<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="5" >

        <android.opengl.GLSurfaceView
            android:id="@+id/gl_surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/Adf2DeviceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Start2DeviceText"
            android:text="Target->Device,Base-> ADF: " />

        <TextView
            android:id="@+id/Adf2StartText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Adf2DeviceText"
            android:text="Target->Start, Base->Device: " />

        <TextView
            android:id="@+id/Start2DeviceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/VersionText"
            android:text="Target->Device,Base->Start: " />

        <TextView
            android:id="@+id/VersionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Version: " />

        <ToggleButton
            android:id="@+id/constantSpaceRelocalization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/learningMode"
            android:textOn="Load Adf On"
            android:textOff="Load Adf Off" />

        <Button
            android:id="@+id/saveAdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:text="Save Adf" />

        <TextView
            android:id="@+id/UUIDText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/uuid"
            android:layout_alignBottom="@+id/uuid"
            android:layout_alignParentLeft="true"
            android:text="UUID :" />

        <ToggleButton
            android:id="@+id/learningMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/UUIDText"
            android:textOff="LearningMode Off"
            android:textOn="LearningMode On" />

        <Button
            android:id="@+id/thirdPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Third Person" />

        <TextView
            android:id="@+id/Adf2Device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Adf2Start"
            android:layout_alignLeft="@+id/Start2Device"
            android:text=" (0.00, 0.00, 0.00)" />

        <TextView
            android:id="@+id/Adf2Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Adf2Device"
            android:layout_below="@+id/Adf2DeviceText"
            android:text=" (0.00, 0.00, 0.00)" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/constantSpaceRelocalization"
            android:text="Start with this Config" />

        <Button
            android:id="@+id/firstPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/thirdPerson"
            android:text="First Person" />

        <TextView
            android:id="@+id/Start2Device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Adf2Device"
            android:layout_toRightOf="@+id/Start2DeviceText"
            android:text=" (0.00, 0.00, 0.00)" />

        <TextView
            android:id="@+id/uuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Adf2StartText"
            android:layout_toRightOf="@+id/VersionText"
            android:text="UUID Value" />

        <Button
            android:id="@+id/topDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/firstPerson"
            android:text="Top Down" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Start2DeviceText"
            android:layout_alignLeft="@+id/uuid"
            android:text="versionValue" />

    </RelativeLayout>

</LinearLayout>